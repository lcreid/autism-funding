<div class="row">
  <% if funded_person.fiscal_years.present? %>
    <div class="col-md-10">
      <% status = Status.new(funded_person, funded_person.selected_fiscal_year) %>
      <div class="row">
        <div class="col-md-3 test-allowable-funds-for-year text-center">
          <p class="top-area">Total Funding for Year</p>
          <div class="bottom-align"><p class="text-center"><%= number_to_currency(status.allowable_funds_for_year) %></p></div>
        </div>
        <div class="col-md-2 test-committed-funds text-center">
          <p class="top-area">Funding Approved</p>
          <div class="bottom-align"><p class="text-center"><%= number_to_currency(status.committed_funds) %></p></div>
        </div>
        <div class="col-md-3 test-remaining-funds text-center">
          <p class="top-area">Funding Remaining this Year</p>
          <div class="bottom-align"><p class="text-center"><%= number_to_currency(status.remaining_funds) %></p></div>
        </div>
        <div class="col-md-2 test-spent-funds text-center">
          <p class="top-area">Funding Spent</p>
          <div class="bottom-align"><p class="text-center"><%= number_to_currency(status.spent_funds) %></p></div>
        </div>
        <div class="col-md-2 test-spent-out-of-pocket text-center">
          <p class="top-area">Out of Pocket</p>
          <div class="bottom-align"><p class="text-center"><%= number_to_currency(status.spent_out_of_pocket) %></p></div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col-md-10">
      <p class="text-center">No data available for this period.</p>
    </div>
  <% end %>
  <div class="col-md-2">
    <% if (fiscal_year_list = funded_person.fiscal_years).present? %>
      <%= select_tag "year[#{funded_person.id}]",
                     options_from_collection_for_select(fiscal_year_list,
                                                        :to_s,
                                                        :to_s,
                                                        funded_person.selected_fiscal_year.to_s),
                                                        class: "pull-right fiscal-year-selector" %>
     <% end %>
  </div>
</div>
