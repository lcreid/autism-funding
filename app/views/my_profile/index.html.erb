<div class="container">
  <h2>My Profile</h2>
  <%= link_to "edit", my_profile_edit_path %>
  <br><br>
  <div class="row">
    <div class="col-sm-3 col-md-3">
      &nbsp;
    </div>
    <div class="col-sm-9 col-md-9">
      <%= current_user.my_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-md-3">
      Address
    </div>
    <div class="col-sm-9 col-md-9">
      <%= @my_address.get_html_address.html_safe %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-md-3">
      Email
    </div>
    <div class="col-sm-9 col-md-9">
      <%= current_user.email %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-md-3">
      Home Phone Number
    </div>
    <div class="col-sm-9 col-md-9">
      <%= @home_phone.full_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-md-3">
      Work Phone Number
    </div>
    <div class="col-sm-9 col-md-9">
      <%= @work_phone.full_number %>
    </div>
  </div>
  <br><br>
  <h2>My Funded Children</h2>
  <br>
  <% current_user.funded_people.each do |fperson| %>
    <div class="row">
      <div class="col-sm-3 col-md-12">
        <%= fperson.my_name %> born <%= fperson.my_dob %>
        <% if fperson.child_in_care_of_ministry %>
           - <i>in care of the Ministry</i>
        <% end %>
      </div>
    </div>

  <% end %>
</div>
