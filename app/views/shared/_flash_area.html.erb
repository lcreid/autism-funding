<% if model.errors.any? %>
  <div class="error-explanation">
    <h2>
      <%= pluralize(model.errors.count, "error") %>
      stopped this
      <%= model.class.to_s.downcase %>
      from being saved:
    </h2>

    <ul>
    <% model.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
